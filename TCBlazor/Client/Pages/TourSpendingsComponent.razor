@using TCalc.Domain
<h3>TourSpendingsComponent</h3>

<table>
@foreach (var spending in (Tour?.Spendings ?? new List<Spending>()))
{
    <tr>
        <td>@spending.Description</td>
        <td>@spending.AmountInCents</td>
     </tr>
}
</table>

@code {
    [Parameter]
    public Tour? Tour { get; set; } = null;
}
