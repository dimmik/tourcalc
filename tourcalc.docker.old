FROM mcr.microsoft.com/dotnet/aspnet:5.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443


FROM mcr.microsoft.com/dotnet/sdk:5.0 AS buildtc
WORKDIR /src
COPY ["TourCalcWebApp/TourCalcWebApp.csproj", "TourCalcWebApp/"]
#RUN dotnet restore "TourCalcWebApp/TourCalcWebApp.csproj"
COPY . .
WORKDIR "/src/TourCalcWebApp"
RUN apt-get update -y
RUN curl -sL https://deb.nodesource.com/setup_10.x | bash --debug
RUN apt-get install nodejs -yq
RUN npm --version
#RUN dotnet build "TourCalcWebApp.csproj" -c Release -o /app



FROM buildtc as publishtc
ARG BUILD_VER=default

RUN dotnet publish  --version-suffix ${BUILD_VER} "TourCalcWebApp.csproj" -c Release -o /app 

FROM base AS final
WORKDIR /app
COPY --from=publishtc /app .
#RUN chmod -R a+w /app
RUN ls -Rla /app
ENTRYPOINT ["dotnet", "TCWebAssembly.dll"]