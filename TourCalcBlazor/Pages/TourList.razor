@page "/tourlist"

@using TourCalcBlazor.Data
@using TCalc.Domain
@inject TourCalcDataService TcService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (tlist == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tour in tlist.Tours)
            {
                <tr>
                    <td>@tour.Name</td>
                    <td>.</td>
                    <td>.</td>
                    <td>.</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    TCalc.Domain.TourList tlist;

    protected override async Task OnInitializedAsync()
    {
        tlist = await TcService.GetTourList();
    }
}
